<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_categoryRootItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purpleMain"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <ImageView
        android:id="@+id/img_categoryItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/marginNormal"
        app:layout_constraintBottom_toTopOf="@+id/txt_categoryItem"
        app:layout_constraintEnd_toEndOf="@+id/txt_categoryItem"
        app:layout_constraintStart_toStartOf="@+id/txt_categoryItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_categoryItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:layout_marginBottom="@dimen/marginNormal"
        android:padding="@dimen/marginNormal"
        android:textAlignment="center"
        android:text="Salut"
        android:textSize="@dimen/txtTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>